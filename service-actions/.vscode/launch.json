{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server - actions",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/nodemon",
        "src/server.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}